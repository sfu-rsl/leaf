// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/rust
{
	"name": "Rust",
	"build": {
		"dockerfile": "Dockerfile",
		"args": {
			"CMAKE_BIN_URL": "https://cmake.org/files/v3.27/cmake-3.27.4-linux-x86_64.tar.gz"
		},
	},
	"features": {
		"ghcr.io/devcontainers/features/git:1": {},
		"ghcr.io/devcontainers/features/rust:1": {},
		// Optional: If you want to use PowerShell in the container.
		"ghcr.io/devcontainers/features/powershell:1": {
			"modules": "posh-git"
		},
	},
	"mounts": [
		// Making the cargo cache persistent in a Docker Volume.
		{
			"source": "devcontainer-cargo-cache-${devcontainerId}",
			"target": "/usr/local/cargo",
			"type": "volume"
		},
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"rust-lang.rust-analyzer",
				"tamasfe.even-better-toml",
				"vadimcn.vscode-lldb",
				"eamodio.gitlens",
				"streetsidesoftware.code-spell-checker",
				"GitHub.copilot",
				"GitHub.copilot-chat",
				"GitHub.vscode-pull-request-github"
			],
		},
	},
	"remoteUser": "vscode",
	"postStartCommand": {
		// Making sure the setup is correct.
		"build": "cd ${containerWorkspaceFolder} && rustc --version && cargo build",
	},
}